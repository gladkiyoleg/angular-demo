{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "import-spacing": false,
    "member-access": [
      true,
      "no-public"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always"
      }
    ],
    "no-console": [
      true,
      "log",
      "debug",
      "info"
    ],
    "array-type": [
      true,
      "array"
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import [^,]+ from |^export | implements "
      }
    ]
  }
}
